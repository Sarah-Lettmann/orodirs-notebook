{
  "dataSource" : {
    "host": "localhost",
    "port": "3306",
    "database": "orodirsNotebook",
    "username": "orodir",
    "password": "krakataua"
  },
  "permissionSource": {
    "class": "OrodirsNotebook\\Core\\Authorization\\PermissionSource",
    "method": "getUserPermissions"
  },
  "adminIdParam": "username",
  "endpoints": {
    "users": {
      "methods": {
        "GET": {
          "controllerClass": "OrodirsNotebook\\API\\V1\\Controller\\UserController",
          "controllerMethod": "readAllUsers",
          "permissions": [
            {
                "adminPermissions": ["everyone"],
                "targetType": "all"
            }
          ]
        }
      },
      "_id": {
        "methods": {
          "GET": {
            "controllerClass": "OrodirsNotebook\\API\\V1\\Controller\\UserController",
            "controllerMethod": "readUser",
            "permissions": [
              {
                  "adminPermissions": ["everyone"],
                  "targetType": "self"
              }
            ]
          }
        }
      }
    }
  }
}
